<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/card_event"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="8dp"

        tools:context=".activity.SplashActivity">

        <TextView
            android:id="@+id/nameUpdate"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/size_title_sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Название обновления" />

        <TextView
            android:id="@+id/dateVersionUpdate"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/size_text_sp"
            app:layout_constraintEnd_toEndOf="@id/nameUpdate"
            app:layout_constraintStart_toStartOf="@id/nameUpdate"
            app:layout_constraintTop_toBottomOf="@id/nameUpdate"
            tools:layout_editor_absoluteX="64dp"
            tools:text="Версия обновления и дата обновления" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/headerBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="dateVersionUpdate" />

        <TextView
            android:id="@+id/descriptionUpdate"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/margin_start_4dp_contents_card"
            android:layout_marginTop="24dp"
            android:autoLink="web"
            android:textColorLink="@color/active_element"
            android:textSize="@dimen/size_text_sp"
            app:layout_constraintEnd_toEndOf="@id/dateVersionUpdate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerBarrier"
            tools:text="@tools:sample/lorem[20]" />

        <TextView
            android:id="@+id/link"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/margin_start_4dp_contents_card"
            android:layout_marginTop="16dp"
            android:autoLink="web"
            android:textColorLink="@color/active_element"
            android:textSize="@dimen/size_text_sp"
            app:layout_constraintEnd_toEndOf="@id/dateVersionUpdate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/descriptionUpdate"
            tools:text="https://github.com/LebedevSergeyVach/EltexSocialMedia" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
