<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Splash screen theme.-->
    <style name="Theme.MyApp.SplashScreen" parent="Theme.SplashScreen">
        <item name="colorOnPrimary">@color/splash_screen</item>
        <item name="windowSplashScreenBackground">@color/splash_screen</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/eltex_logo_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.HelloEltex</item>
        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="31">
            @drawable/eltex
        </item>
        <item name="android:statusBarColor">@color/splash_screen</item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@drawable/bottom_navigation_icon_selector</item>
        <item name="itemTextColor">@drawable/bottom_navigation_text_selector</item>
        <item name="itemRippleColor">@null</item>
    </style>

    <!-- Стиль для MaterialDatePicker -->
    <style name="CustomDatePicker" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/active_element</item>
        <item name="colorPrimaryContainer">@color/active_element</item>
    </style>

    <!-- Стиль для MaterialTimePicker -->
    <style name="CustomTimePicker" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="colorPrimary">@color/active_element</item>
        <item name="colorPrimaryContainer">@color/active_element</item>
    </style>

    <!-- Кастомный стиль для TextView -->
    <style name="CustomTextViewStyle">
        <item name="android:textColorHighlight">@color/confetti_blue</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textSelectHandle">@drawable/text_select_handle</item>
        <item name="android:textSelectHandleLeft">@drawable/text_select_handle</item>
        <item name="android:textSelectHandleRight">@drawable/text_select_handle</item>
    </style>

    <!-- Кастомный стиль для TextInputLayout -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/active_element</item>
        <item name="hintTextColor">@color/active_element</item>
        <item name="endIconTint">@color/active_element</item>

        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <style name="Widget.App.PopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
    </style>

    <!-- Оснвной стиль для MaterialCardView -->
    <style name="Style.MaterialCardView.Main" parent="Widget.Material3.CardView.Outlined">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="strokeWidth">1dp</item>

        <!-- Отключаем состояние overlay (эффект приподнятости) -->
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Дополнительный стиль для MaterialCardView -->
    <style name="Style.MaterialCardView.Additional" parent="Widget.Material3.CardView.Outlined">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Стиль авторизации для MaterialCardView -->
    <style name="Style.MaterialCardView.Auth" parent="Widget.Material3.CardView.Outlined">
        <item name="cardElevation">1dp</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Стиль изображения для MaterialCardView -->
    <style name="Style.MaterialCardView.Image" parent="Widget.Material3.CardView.Outlined">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Стиль изменяемого контента для MaterialCardView -->
    <style name="Style.MaterialCardView.Edit.Content" parent="Widget.Material3.CardView.Outlined">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Стиль настроек для MaterialCardView -->
    <style name="Style.MaterialCardView.Settings" parent="Widget.Material3.CardView.Outlined">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Стиль правил для MaterialCardView -->
    <style name="Style.MaterialCardView.Rules" parent="Widget.Material3.CardView.Outlined">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>
