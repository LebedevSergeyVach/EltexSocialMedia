<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    Splash screen theme.

    <style name="Theme.MyApp.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_screen</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/eltex_logo_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.MyApp</item>
        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="31">
            @string/app_name_icon
        </item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@drawable/bottom_navigation_icon_selector</item>
        <item name="itemTextColor">@drawable/bottom_navigation_text_selector</item>
        <item name="itemRippleColor">@null</item>
    </style>

    <!-- Стиль для MaterialDatePicker -->
    <style name="CustomDatePicker" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/active_element</item>
        <item name="colorPrimaryContainer">@color/active_element</item>
    </style>

    <!-- Стиль для MaterialTimePicker -->
    <style name="CustomTimePicker" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="colorPrimary">@color/active_element</item>
        <item name="colorPrimaryContainer">@color/active_element</item>
    </style>

    <!-- Кастомный стиль для TextView -->
    <style name="CustomTextViewStyle">
        <item name="android:textColorHighlight">@color/confetti_blue</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/active_element</item>
        <item name="hintTextColor">@color/active_element</item>
        <item name="endIconTint">@color/active_element</item>

        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <style name="Widget.App.PopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
    </style>
</resources>
